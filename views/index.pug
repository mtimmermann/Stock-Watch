extends layout

block content

  section(class='container')
    div(class='row')
      div(class='col-lg-12')
        div#container-chart
    
    div(class='row')
      div(class='stocks-container')
        - var classes = ['col-md-4', 'col-sm-6', 'stock-block', 'stock-new']
        div(class=classes)
          label Add Stock Code
          form(novalidate)
            div(class='input-group')
              input(type='text' class='form-control' placeholder='Stock Code')
              span(class='input-group-btn')
                - var classes = ['btn', 'btn-success', type='submit']
                button(class=classes type='submit') Add

  script(src='/js/dependencies/highcharts/highstock.js')
  script(src='/js/dependencies/highcharts/exporting.js')
  script(src='/js/highChartThemes.js')
  script(src='/js/main.js')
